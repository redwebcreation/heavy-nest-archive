    "applications": {
        "example.com": {
            "image": "nginx",
            "warm": true,
            "env": {
                "APP_ENV": "local"
            },
            "log_policy": "default",
            "volumes":  []
        }
    },

    "registries": {
        "default": {
            "host": "rg.fr-par.scw.cloud/rwsapps",
            "username": "nologin",
            "password": "0a667433-7712-465b-9e36-7b43c52e2426"
        }
    },

    "log_policies": {
        "default": [
            {
                "when": "level == error || level == fatal",
                "redirection": {
                    "kind": "stream",
                    "value": "stderr"
                }
            },
            {
                "when": "< error",
                "redirection": {
                    "kind": "stream",
                    "value": "stdout"
                }
            },
            {
                "level": "debug",
                "redirection":{
                    "kind": "file",
                    "value": "/tmp/debug.log"
                }
            }
        ]
    }
}