{
    "default_network": "foxy",

    "backends": [
        "127.0.0.1"
    ],

    "applications": {
        "example.com": {
            "image": "nginx",
            "warm": false,
            "env": {
                "APP_ENV": "local"
            },
            "env_files": [
                "/etc/sites/example.env"
            ],
            "registry": "main",
            "log_policy": "default"
        }
    },

    "registries": {
        "rg.fr-par.scw.cloud/rwsapps": {
            "username": "someone",
            "password": "something"
        }
    },

    "log_policies": {
        "default": [
            {
                "when": "level == error || level == fatal",
                "redirection": {
                    "kind": "stream",
                    "value": "stderr"
                }
            },
            {
                "when": "< error",
                "redirection": {
                    "kind": "stream",
                    "value": "stdout"
                }
            },
            {
                "level": "debug",
                "redirection":{
                    "kind": "file",
                    "value": "/tmp/debug.log"
                }
            }
        ]
    }
}